  <section class="relative pt-40 pb-24 px-6 overflow-hidden">
    <!-- Background -->
    <div class="absolute inset-0 bg-grid opacity-30 pointer-events-none"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-vermillion/5 rounded-full blur-[160px] pointer-events-none"></div>

    <div class="relative z-10 max-w-6xl mx-auto">
      <div class="text-center mb-20">
        <div class="overline-divider max-w-xs mx-auto mb-4 animate-fade-in">Pricing</div>
        <h1 class="section-title text-4xl sm:text-5xl md:text-6xl mb-6 animate-fade-up" style="animation-delay: 0.1s;">
          Big 4 rigor.<br/>
          <span class="italic font-accent text-gradient-warm">Founder-friendly pricing.</span>
        </h1>
        <p class="text-lg text-muted max-w-xl mx-auto animate-fade-up" style="animation-delay: 0.2s;">
          Your first idea is free — report delivered to your inbox in 30 minutes. Also available to download from your dashboard anytime.
        </p>
      </div>

      <!-- Pricing Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        {plans.map((plan, i) => (
          <div class={`card-glass rounded-2xl p-8 animate-fade-up ${plan.featured ? 'pricing-active' : ''} flex flex-col`} style={`animation-delay: ${0.2 + i * 0.1}s`}>
            {plan.featured && (
              <div class="mb-4">
                <span class="px-3 py-1 rounded-full bg-vermillion/10 border border-vermillion/20 font-mono text-[10px] text-vermillion uppercase tracking-widest">
                  Best Value
                </span>
              </div>
            )}

            <div class="mb-6">
              <h3 class="font-serif text-xl font-semibold mb-1">{plan.name}</h3>
              <p class="text-sm text-dim">{plan.desc}</p>
            </div>

            <div class="mb-8">
              <span class="font-serif text-4xl font-bold">
                {plan.price === '0' ? 'Free' : `$${plan.price}`}
              </span>
              {plan.price !== '0' && (
                <span class="text-sm text-dim ml-1">{plan.period}</span>
              )}
            </div>

            <ul class="space-y-3 mb-8 flex-1">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-2.5 text-sm">
                  <svg class="w-4 h-4 text-emerald shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-ivory">{feature}</span>
                </li>
              ))}
            </ul>

            <button class={`w-full py-3 rounded-full text-sm font-semibold transition-all ${plan.featured ? 'btn-glow' : 'btn-outline'}`}>
              {plan.cta}
            </button>
          </div>
        ))}
      </div>
    </div>
  </section>

